@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "My Movies";
}

<h1>My Movies</h1>

<form asp-controller="Movies" asp-action="Index" method="get" class="mb-4">
    <div class="form-row align-items-center">
        <div class="col-auto">
            <label class="sr-only" for="searchString">Search</label>
            <input type="text" class="form-control mb-2" id="searchString" name="searchString" 
                   placeholder="Search by title" value="@ViewData["CurrentFilter"]" 
                   style="padding: 8px 12px;" />
        </div>
        <div class="col-auto">
            <label class="sr-only" for="movieGenre">Genre</label>
            <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-control mb-2" 
                    style="padding: 8px 12px;" value="@ViewData["CurrentGenre"]">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <label class="sr-only" for="yearFilter">Year</label>
            <select asp-for="YearFilter" class="form-control mb-2" 
                    style="padding: 8px 12px;">
                <option value="">All Years</option>
                <option value="2023">2023 and newer</option>
                <option value="2022">2022 and newer</option>
                <option value="2021">2021 and newer</option>
                <option value="2020">2020 and newer</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-2">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movies[0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.Movies[0].Genre)</th>
            <th>@Html.DisplayNameFor(model => model.Movies[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Movies[0].Rating)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
